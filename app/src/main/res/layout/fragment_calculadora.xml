<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_below="@+id/toolbar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.cochinito.cochinito.Fragmentos.CalculadoraFragment">


        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            android:elevation="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            card_view:contentPaddingBottom="30dp"
            android:layout_below="@+id/toolbar">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:stretchColumns="*">

                <LinearLayout
                    android:id="@+id/area_monto"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_monto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/campo_monto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Monto"
                            android:inputType="number"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_plazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/area_monto"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_plazo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar Plazo"
                            android:nextFocusLeft="@+id/campo_monto"
                            android:layout_marginTop="38dp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_aceptar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/area_olvidar"
                    android:orientation="horizontal">

                </LinearLayout>
            </TableLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            android:elevation="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            card_view:contentPaddingBottom="30dp"
            android:layout_below="@+id/card">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titulo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textSize="21dp"
                        android:textColor="#ffffff"
                        android:layout_span="10"
                        android:text="CETES"
                        android:background="#00BCD4"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mon"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Monto Invertido:"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/valorti"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Títulos"/>

                    <TextView
                        android:id="@+id/tasati"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:text="Tasa Bruta"/>
                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cetescom"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="4"
                        android:text="Cetes:"/>

                    <TextView
                        android:id="@+id/valor"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="5"
                        android:textColor="#0097A7"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/ta"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="1"
                        android:textColor="#0097A7"
                        android:text="0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/boncom"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="4"
                        android:text="Bonddia:"/>

                    <TextView
                        android:id="@+id/bonvalor"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="5"
                        android:textColor="#0097A7"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/bonta"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="1"
                        android:textColor="#0097A7"
                        android:text="0"/>
                </TableRow>


                <View android:layout_height="1dp"
                    android:background="#00825a"/>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/invc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Inversión en Cetes:"/>

                    <TextView
                        android:id="@+id/inversion"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/invB"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Inversión Bonddia:"/>

                    <TextView
                        android:id="@+id/inversionB"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ganc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Interés Bruto:"/>

                    <TextView
                        android:id="@+id/gananciaB"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ganBonddia"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Interés Bonddia:"/>

                    <TextView
                        android:id="@+id/gananciaBonddia"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/remc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Remanente:"/>

                    <TextView
                        android:id="@+id/remanente"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/is"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="ISR:"/>

                    <TextView
                        android:id="@+id/ISR"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:text="$0"/>
                </TableRow>

                <View android:layout_height="1dp"
                    android:background="#00825a"/>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tganado"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="start"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:layout_span="9"
                        android:text="Obtienes al final:"/>

                    <TextView
                        android:id="@+id/tot"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#0097A7"
                        android:textStyle="bold"
                        android:text="$0"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/unmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/dosmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/seismes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/docemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/bonin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </RelativeLayout>
</ScrollView>